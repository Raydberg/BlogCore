@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}

<br />
<br />

<h3 class="text-center">Crear una nueva categoria</h3>

<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 mt-4 offset-1">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br/>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-row">
                <div class="col-8">
                    <partial name="_ViewCreateBack"/>
                </div>
            </div>
        </div>
    </div>
</form>