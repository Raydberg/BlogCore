@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-outline-primary"> <i class="fa-solid fa-plus"></i>Crear Nueva Categoria</a>
        </div>
    </div>
    <br />
    <br />

    <table id="tblCategories" class="table table-striped table-bordered" width="100%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Orden</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/js/category.js"></script>
}